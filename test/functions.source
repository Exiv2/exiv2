		if [ -e $var ]; then rm -rf $var ; fi
		ln $target $var
	done
}

##
# real_path - report the absolute path to a file
real_path ()
{
	if [ "$PLATFORM" == "Darwin" -o "$PLATFORM" == "mingw" ]; then
		if [ -d "$1" ]; then
			cd "$1"
			echo $PWD
		else
			cd $(dirname $1)
			echo "$PWD"/$(basename "$1")
		fi
	else
		which realpath 2>/dev/null >/dev/null
		if [ $? == 0 ]; then
			realpath "$1"
		else
			readlink -f "$1"
		fi
    fi
}

